<h1>Editing Book</h1>
<%= form_with model: @book, url:books_path(@book.id), method: :patch do |f| %>

  <d>Title</d>
  <%= f.text_field :title %>
  
  <d>Body</d>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
  
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path(@book.id) %>