<h1><strong>Books</strong></h1>
 <h4>Title</h4>
<% @books.each do |book| %>

<div class="title">
  <span>
      <%= book.title %>
  </span>
  <span>
      <%= book.body %>
  </span>
</div>

<div =class"title-link">
 <span>
    <%= link_to "Show", book_path(book.id) %>
    <%= link_to "Edit", edit_book_path(book.id) %>
    <%= link_to "Destroy", books_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
  </span>
</div>
  
<% end %>

<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

<div class="field">
 <%= f.label :Title %><br>
 <%= f.text_field :title %>
</div>

<div class="field">
 <%= f.label :Body %><br>
 <%= f.text_area :body %>
</div>

<div class="submit">
 <%= f.submit 'Create Book'%>
</div>

<% end %>