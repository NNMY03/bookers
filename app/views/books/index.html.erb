<h1><strong>Books</strong></h1>
 <h4>Title</h4>
<% @books.each do |book| %>

<div class="title">
  <span>
      <%= book.title %>
  </span>
  <span>
      <%= book.body %>
  </span>
</div>

<div =class"title-link">
 <span>
    <%= link_to "Show", show_book_path(book.id) %>
  </span>
</div>
  
<% end %>

<h2>New book</h2>
<%= form_with model: @book, url: '/index', method: :post do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book'%>
<% end %>